{% extends 'MediashareAppBundle::base.html.twig' %}
{% block content %}
    <h1>Show <span class="errorcode">{{ entity.name }}</span> for Metasploit.</h1>
    <a href="{{ path('admin_script') }}">
        Back to the list
    </a>
    <h1 class="errorcode">Script</h1>

    <table class="record_properties table">
        <tbody>
            <tr>
                <th>Id</th>
                <td scope="row">{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ entity.thispath }}</td>
            </tr>
            <tr>
                <th>Payload</th>
                <td>{{ entity.payload }}</td>
            </tr>
            <tr>
                <th>Os</th>
                <td>{{ entity.os }}</td>
            </tr>
            <tr>
                <th>Host</th>
                <td>{{ entity.host }}</td>
            </tr>
            <tr>
                <th>Port</th>
                <td>{{ entity.port }}</td>
            </tr>
            <tr>
                <th>Download</th>
                <td><a href="{{ asset( entity.thispath )}}" download>Download</a></td>
            </tr>
        </tbody>
    </table>


        <div class="content">
          <a href="{{ path('admin_script_edit', { 'id': entity.id }) }}">
              Edit
          </a>
          {{ form(delete_form) }}
        </div>

{% endblock %}
