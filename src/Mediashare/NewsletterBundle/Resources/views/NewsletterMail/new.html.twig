{% extends 'MediashareAdminBundle::base.html.twig' %}

{% block content_right %}
    <div class="col-lg-12">
        <h1 class="page-header">
            Création d'un abonné
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-at"></i> <a href="{{ path('admin_newsletter_mail') }}">Gestion des abonnés</a>
            </li>
            <li class="active">
                <i class="fa fa-plus-circle"></i> Ajouter
            </li>
        </ol>
    </div>
    <div class="col-lg-12">
        {{ form_start(form, {'attr': {'class':'form-horizontal' }}) }}
        <fieldset>
            <div class="form-group">
                {{ form_label(form.email) }}
                <div class="col-lg-10">
                    {{ form_errors(form.email) }}
                    {{ form_widget(form.email) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.newsletterGroup) }}
                <div class="col-lg-10">
                    {{ form_errors(form.newsletterGroup) }}
                    {{ form_widget(form.newsletterGroup) }}
                </div>
            </div>
        </fieldset>
        {{ form_end(form) }}

        <a href="{{ path('admin_newsletter_mail') }}" class="btn btn-primary"><i class="fa fa-arrow-circle-left"></i>
            Retour à la liste</a>
    </div>
{% endblock %}

