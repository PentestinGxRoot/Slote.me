{% extends 'MediashareAdminBundle::base.html.twig' %}

{% block  content_right %}
    <div class="col-lg-12">
        <h1 class="page-header">
            Abonné
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-at"></i> <a href="{{ path('admin_newsletter_mail') }}">Gestion des abonnés</a>
            </li>
            <li class="active">
                <i class="fa fa-eye"></i> Voir
            </li>
        </ol>
    </div>

    <div class="col-lg-12">
        <div class="panel panel-info">
            <div class="panel-heading">Adresse Email</div>
            <div class="panel-body">
                {{ entity.email }}
            </div>
        </div>
        <div class="panel panel-info">
            <div class="panel-heading">Date d'enregistrement</div>
            <div class="panel-body">
                {{ entity.registerDate|date("d-m-Y") }}
            </div>
        </div>

        <a href="{{ path('admin_newsletter_mail') }}" class="btn btn-primary"><i class="fa fa-arrow-circle-left"></i>
            Retour
            à la liste</a>
        <a href="{{ path('admin_newsletter_mail_edit', { 'id': entity.id }) }}" class="btn btn-primary"><i
                    class="fa fa-pencil"></i>
            Modifier</a>
        {{ form(delete_form) }}
    </div>
{% endblock %}
