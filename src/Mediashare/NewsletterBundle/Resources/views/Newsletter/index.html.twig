{% extends 'MediashareAdminBundle::base.html.twig' %}

{% block  content_right %}
    <div class="col-lg-12">
        <h1 class="page-header">
            Liste des newsletters
        </h1>
        <ol class="breadcrumb">
            <li class="active">
                <i class="fa fa-paper-plane"></i> Gestion des newsletters
            </li>
        </ol>
    </div>

    <div class="col-lg-12">
        <table class="table table-striped table-hover sortable">
            <thead>
            <tr>
                <th style="width: 5px;"></th>
                <th>Object</th>
                <th>Auteur</th>
                <th>Date d'envoie</th>
                <th style="width: 125px;">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td></td>
                    <td><a href="{{ path('admin_newsletter_show', { 'id': entity.id }) }}">{{ entity.object }}</a></td>
                    <td>{{ entity.addresser }}</td>
                    <td>{% if entity.sendDate %}{{ entity.sendDate|date('d-m-Y') }}{% endif %}</td>
                    <td>
                        <div class="btn-group-vertical">
                            <a href="{{ path('admin_newsletter_show', {'id':entity.id}) }}" class="btn btn-primary"><i
                                        class="fa fa-eye"></i> Voir</a>
                            <a href="{{ path('admin_newsletter_edit', {'id':entity.id}) }}" class="btn btn-primary"><i
                                        class="fa fa-pencil"></i> Modifier</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('admin_newsletter_new') }}" class="btn btn-primary"><i class="fa fa-plus-circle"></i>
            Ajouter</a>
    </div>
{% endblock %}
