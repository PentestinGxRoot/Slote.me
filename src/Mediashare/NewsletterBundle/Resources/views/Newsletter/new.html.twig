{% extends 'MediashareAdminBundle::base.html.twig' %}

{% block content_right %}
    <div class="col-lg-12">
        <h1 class="page-header">
            Création d'une newsletter
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-paper-plane"></i> <a href="{{ path('admin_newsletter') }}">Gestion des newsletters</a>
            </li>
            <li class="active">
                <i class="fa fa-plus-circle"></i> Ajouter
            </li>
        </ol>
    </div>
    <div class="col-lg-12">
        {{ form_start(form, {'attr': {'class':'form-horizontal' }}) }}
        <fieldset>
            <div class="form-group">
                {{ form_label(form.object) }}
                <div class="col-lg-10">
                    {{ form_errors(form.object) }}
                    {{ form_widget(form.object) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.addresser) }}
                <div class="col-lg-10">
                    {{ form_errors(form.addresser) }}
                    {{ form_widget(form.addresser) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.message) }}
                <div class="col-lg-10">
                    {{ form_errors(form.message) }}
                    {{ form_widget(form.message) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.newsletterGroup) }}
                <div class="col-lg-10">
                    {{ form_errors(form.newsletterGroup) }}
                    {{ form_widget(form.newsletterGroup) }}
                </div>
            </div>
        </fieldset>
        {{ form_end(form) }}

        <a href="{{ path('admin_newsletter') }}" class="btn btn-primary"><i class="fa fa-arrow-circle-left"></i> Retour
            à la liste</a>
    </div>
{% endblock %}

