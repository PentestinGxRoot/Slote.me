{% extends 'MediashareAdminBundle::base.html.twig' %}

{% block  content_right %}
    <div class="col-lg-12">
        <h1 class="page-header">
            Page
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-columns"></i> <a href="{{ path('admin_page') }}">Pages</a>
            </li>
            <li class="active">
                <i class="fa fa-eye"></i> Voir
            </li>
        </ol>
    </div>

    <div class="col-lg-12">
        <div class="panel panel-info">
            <div class="panel-heading">Titre</div>
            <div class="panel-body">
                {{ entity.title }}
            </div>
        </div>
        <div class="panel panel-info">
            <div class="panel-heading">Chemin de la page</div>
            <div class="panel-body">
                {{ entity.path }}
            </div>
        </div>
        <div class="panel panel-info">
            <div class="panel-heading">Description</div>
            <div class="panel-body">
                {{ entity.content|raw }}
            </div>
        </div>


        <a href="{{ path('admin_page') }}" class="btn btn-primary"><i class="fa fa-arrow-circle-left"></i> Retour Ã  la
            liste</a>
        <a href="{{ path('admin_page_edit', { 'id': entity.id }) }}" class="btn btn-primary"><i
                    class="fa fa-pencil"></i>
            Modifier</a>
        {{ form(delete_form) }}
    </div>
{% endblock %}
