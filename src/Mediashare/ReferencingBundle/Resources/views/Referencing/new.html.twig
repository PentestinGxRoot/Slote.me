{% extends 'MediashareAdminBundle::base.html.twig' %}

{% block content_right %}
    <div class="col-lg-12">
        <h1 class="page-header">
            Cr√©ation d'un referencement sur une page
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-bookmark"></i> <a href="{{ path('admin_referencing') }}">Referencement des pages</a>
            </li>
            <li class="active">
                <i class="fa fa-plus-circle"></i> Ajouter
            </li>
        </ol>
    </div>
    <div class="col-lg-12">
        {{ form_start(form, {'attr': {'class':'form-horizontal' }}) }}
        <fieldset>

            <div class="form-group">
                {{ form_label(form.title) }}
                <div class="col-lg-10">
                    {{ form_errors(form.title) }}
                    {{ form_widget(form.title) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.h1) }}
                <div class="col-lg-10">
                    {{ form_errors(form.h1) }}
                    {{ form_widget(form.h1) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.h1Title) }}
                <div class="col-lg-10">
                    {{ form_errors(form.h1Title) }}
                    {{ form_widget(form.h1Title) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.description) }}
                <div class="col-lg-10">
                    {{ form_errors(form.description) }}
                    {{ form_widget(form.description) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.path) }}
                <div class="col-lg-10">
                    {{ form_errors(form.path) }}
                    {{ form_widget(form.path) }}
                </div>
            </div>
        </fieldset>
        {{ form_end(form) }}

        <a href="{{ path('admin_referencing') }}" class="btn btn-primary"><i class="fa fa-arrow-circle-left"></i>
            Retour &agrave; la
            liste</a>
    </div>
{% endblock %}
