{% extends 'MediashareAdminBundle::base.html.twig' %}

{% block content_right %}
    <div class="col-lg-12">
        <h1 class="page-header">
            Mots cl√©s
        </h1>
        <ol class="breadcrumb">
            <li class="active">
                <i class="fa fa-key"></i> Keywords
            </li>
        </ol>
    </div>

    <div class="col-lg-12">
        {% if key|length > 0 %}
            <div>
                {{ key.0.keywords|raw }}
            </div>
            <div class="btn-group-vertical">
                <a href="{{ path('admin_keywords_edit', {'id':key.0.id}) }}" class="btn btn-primary"><i
