{% extends 'MediashareAdminBundle::base.html.twig' %}

{% block content_right %}
    <h1>Création d'un pdf</h1>

    {{ form_start(form, {'attr': {'class':'form-horizontal' }}) }}
    <fieldset>
        <div class="form-group">
            {{ form_label(form.pdfName) }}
            <div class="col-lg-10">
                {{ form_errors(form.pdfName) }}
                {{ form_widget(form.pdfName) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.target) }}
            <div class="col-lg-10">
                {{ form_errors(form.target) }}
                {{ form_widget(form.target) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.file) }}
            <div class="col-lg-10">
                {{ form_errors(form.file) }}
                {{ form_widget(form.file) }}
            </div>
        </div>
    </fieldset>
    {{ form_end(form) }}

    <a href="{{ path('admin_pdf') }}" class="btn btn-primary"><i class="fa fa-arrow-circle-left"></i> Retour à la
        liste</a>
{% endblock %}
