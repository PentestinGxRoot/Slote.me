{% extends 'MediashareAdminBundle::base.html.twig' %}

{% block content_right %}
    <h1>Modification d'un pdf</h1>

    {{ form_start(edit_form, {'attr': {'class':'form-horizontal' }}) }}
    <fieldset>
        <div class="form-group">
            {{ form_label(edit_form.pdfName) }}
            <div class="col-lg-10">
                {{ form_errors(edit_form.pdfName) }}
                {{ form_widget(edit_form.pdfName) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(edit_form.target) }}
            <div class="col-lg-10">
                {{ form_errors(edit_form.target) }}
                {{ form_widget(edit_form.target) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(edit_form.file) }}
            <div class="col-lg-10">
                {{ form_errors(edit_form.file) }}
                {{ form_widget(edit_form.file) }}
            </div>
        </div>
    </fieldset>
    {{ form_end(edit_form) }}

    <a href="{{ path('admin_pdf') }}" class="btn btn-primary"><i class="fa fa-arrow-circle-left"></i> Retour Ã  la
        liste</a>
    {{ form(delete_form) }}
{% endblock %}
