{% extends 'MediashareAdminBundle::base.html.twig' %}

{% block content_right %}
    <h1>{{ "liste des pdfs"|upper }}</h1>

    {% if entities|length > 0 %}
        <div class="list-group col-lg-8">
            {% for entity in entities %}
                <div class="list-group-item">
                    <div class="row-action-primary">
                        <img class="circle" src="{{ asset('images/sansimage/file-pdf.png') }}" alt="icon">
                    </div>
                    <div class="row-content">
                        <div class="least-content">{{ entity.createDate|format('Y-m-d') }}</div>
                        <h4 class="list-group-item-heading">{{ entity.pdfName }}</h4>

                        <p class="list-group-item-text">
                            <a href="javascript:void(0)" data-pdf="{{ entity.pdfPath(base) }}" onclick="showPdf(this)"
                               class="btn btn-fab-mini btn-fab-default"><i class="fa fa-eye"></i> voir</a>
                            <a href="{{ path('admin_pdf_edit', {'id':entity.id}) }}"
                               class="btn btn-fab-mini btn-fab-default"><i class="fa fa-pencil"></i> Modifier</a>
                            <a href="{{ path('admin_pdf_delete', {'id':entity.id}) }}"
                               class="btn btn-fab-mini btn-fab-default"><i class="fa fa-close"></i> Supprimer</a>
                        </p>
                    </div>
                </div>
                <div class="list-group-separator"></div>
            {% endfor %}
        </div>
        <div class="show_pdf col-lg-4">
            <b>VIEW PDF</b>
        </div>
    {% endif %}
    <div class="col-lg-12">
        <a href="{{ path('admin_pdf_new') }}" class="btn btn-primary"><i class="fa fa-arrow-circle-left"></i> AJOUTER
        </a>
    </div>
{% endblock %}
