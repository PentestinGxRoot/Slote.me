{% extends 'MediashareAdminBundle::base.html.twig' %}

{% block  content_right %}
    <div class="col-lg-12">
        <h1 class="page-header">
            Liste des news
        </h1>
        <ol class="breadcrumb">
            <li class="active">
                <i class="fa fa-newspaper-o"></i> News
            </li>
        </ol>
    </div>

    <div class="col-lg-12">
        <table class="table table-striped table-hover sortable">
            <thead>
            <tr>
                <th style="width: 5px;"></th>
                <th>Titre</th>
                <th>Date de cr√©ation</th>
                <th style="width: 125px;">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr class="{% if entity.online != true %}danger{% endif %}"
                    data-url="{{ path('admin_news_sort', {'id':entity.id}) }}">
                    <td class="sorter"><i class="fa fa-arrows-v"></i></td>
                    <td><a href="{{ path('admin_news_show', { 'id': entity.id }) }}">{{ entity.title }}</a></td>
                    <td>{% if entity.createDate %}{{ entity.createDate|date('d-m-Y') }}{% endif %}</td>
                    <td>
                        <div class="btn-group-vertical">
                            <a href="{{ path('admin_news_show', {'id':entity.id}) }}" class="btn btn-primary"><i
                                        class="fa fa-eye"></i> Voir</a>
                            <a href="{{ path('admin_news_edit', {'id':entity.id}) }}" class="btn btn-primary"><i
                                        class="fa fa-pencil"></i> Modifier</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {% include 'MediashareAdminBundle::_pager.html.twig' %}

        <a href="{{ path('admin_news_new') }}" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Ajouter</a>
    </div>
{% endblock %}
