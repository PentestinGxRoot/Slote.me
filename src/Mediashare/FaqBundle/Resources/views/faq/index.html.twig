{% extends 'MediashareAdminBundle::base.html.twig' %}

{% block content_right %}
    <div class="col-lg-12">
        <h1 class="page-header">
            Liste des F.A.Q
        </h1>
        <ol class="breadcrumb">
            <li class="active">
                <i class="fa fa-question-circle"></i> F.A.Q
            </li>
        </ol>
    </div>

    <div class="col-lg-12">
        <table class="table table-striped table-hover sortable">
            <thead>
            <tr>
                <th style="width: 5px;"></th>
                <th>Question</th>
                <th>Position</th>
                <th style="width: 125px;">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr class="{% if entity.online != true %}danger{% endif %}"
                    data-url="{{ path('admin_faq_sort', {'id':entity.id}) }}">
                    <td class="sorter"><i class="fa fa-arrows-v"></i></td>
                    <td>{{ entity.question }}</td>
                    <td>{{ entity.position }}</td>
                    <td>
                        <div class="btn-group-vertical">
                            <a href="{{ path('admin_faq_show', {'id':entity.id}) }}" class="btn btn-primary"><i
                                        class="fa fa-eye"></i> Voir</a>
                            <a href="{{ path('admin_faq_edit', {'id':entity.id}) }}" class="btn btn-primary"><i
                                        class="fa fa-pencil"></i> Modifier</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('admin_faq_new') }}" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Ajouter</a>
    </div>
{% endblock %}
