{% extends 'MediashareAppBundle:Mail:mail_base.html.twig' %}
{% block contenu %}
    <!-- contenu -->
    <tr class="content">
        <td class="w600" width="600" bgcolor="#ffffff" style="padding: 20px;">
            <table class="w600 " width="600" cellpadding="0" cellspacing="0" border="0">
                <tbody>
                <tr>
                    <td class="w30" width="30"></td>
                    <td class="w580" width="580">
                        <!-- une zone de contenu -->
                        <table class="w580" width="580" cellpadding="0" cellspacing="0" border="0">
                            <tbody>
                            <tr>
                                <td class="w580" width="580">
                                    <div align="left" class="article-content">
                                        <p>
                                            <strong>Vous avez reçu un nouveau message sur le formulaire de contact</strong>
                                        </p>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <table class="tableResume" style="width:97%;">
                                        <tbody>
                                        <tr>
                                            <td>Nom</td>
                                            <td>{{ entity.lastname }}</td>
                                        </tr>
                                        <tr>
                                            <td>Prénom</td>
                                            <td>{{ entity.firstname }}</td>
                                        </tr>
                                        <tr>
                                            <td>Téléphone</td>
                                            <td>{{ entity.phone }}</td>
                                        </tr>
                                        <tr>
                                            <td>Email</td>
                                            <td>{{ entity.email }}</td>
                                        </tr>
                                        <tr>
                                            <td>Adresse</td>
                                            <td>{{ entity.address }}</td>
                                        </tr>
                                        <tr>
                                            <td>Ville</td>
                                            <td>{{ entity.city  }}</td>
                                        </tr>
                                        <tr>
                                            <td>Code postale</td>
                                            <td>{{ entity.zipcode }}</td>
                                        </tr>
                                        <tr>
                                            <td>Message</td>
                                            <td>{{ entity.message|raw }}</td>
                                        </tr>
                                        <tr>
                                            <td>Date de création</td>
                                            <td> {{ entity.createDate|date('d-m-Y') }} </td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                        <!-- fin zone -->
                </tr>
                </tbody>
            </table>
        </td>
    </tr>

{% endblock %}