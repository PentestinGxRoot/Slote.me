{% extends 'MediashareAdminBundle::base.html.twig' %}

{% block content_right %}
    <div class="col-lg-12">
        <h1 class="page-header">
            Création d'un utilisateur
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-users"></i> <a href="{{ path('admin_user') }}">Utilisateurs</a>
            </li>
            <li class="active">
                <i class="fa fa-plus-circle"></i> Ajouter
            </li>
        </ol>
    </div>
    <div class="col-lg-12">
        {{ form_start(form, {'attr': {'class':'form-horizontal' }}) }}
        <fieldset>
            <div class="form-group">
                {{ form_label(form.username) }}
                <div class="col-lg-10">
                    {{ form_errors(form.username) }}
                    {{ form_widget(form.username) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.firstName) }}
                <div class="col-lg-10">
                    {{ form_errors(form.firstName) }}
                    {{ form_widget(form.firstName) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.lastName) }}
                <div class="col-lg-10">
                    {{ form_errors(form.lastName) }}
                    {{ form_widget(form.lastName) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.color) }}
                <div class="col-lg-10">
                    {{ form_errors(form.color) }}
                    {{ form_widget(form.color) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.email) }}
                <div class="col-lg-10">
                    {{ form_errors(form.email) }}
                    {{ form_widget(form.email) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.password.first) }}
                <div class="col-lg-10">
                    {{ form_errors(form.password.first) }}
                    {{ form_widget(form.password.first) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.password.second) }}
                <div class="col-lg-10">
                    {{ form_errors(form.password.second) }}
                    {{ form_widget(form.password.second) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.roles) }}
                <div class="col-lg-10">
                    {{ form_errors(form.roles) }}
                    {{ form_widget(form.roles) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.enabled) }}
                <div class="col-lg-10">
                    {{ form_errors(form.enabled) }}
                    {{ form_widget(form.enabled) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-2">
                    {{ form_rest(form) }}
                </div>
            </div>
        </fieldset>
        {{ form_end(form) }}

        <a href="{{ path('admin_user') }}" class="btn btn-primary"><i class="fa fa-arrow-circle-left"></i> Retour à la
            liste</a>
    </div>
{% endblock %}
